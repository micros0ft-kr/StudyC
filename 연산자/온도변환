// 입출력을 위해 필요한 헤더파일은 무엇인가?
#include <stdio.h>
// 메인 함수는 어떻게 작성하는가?
int main(void) {
	

	// 섭씨온도를 저장할 변수 선언
	float C;
	// 입력 안내 문자열 출력 (수정하지 마세요)
	printf("섭씨 온도를 입력하세요: ");
	// 사용자로부터 섭씨온도를 입력받는다.
	scanf("%f",&C);
	// 화씨온도를 저장할 변수 선언 및 온도 환산
	double F;
	F = (180/100.0)*C+32;
	// 화씨온도를 저장한 변수가 f라면 다음과 같이 출력문 작성
	printf("화씨 온도는 %.1lf도 입니다.\n", F);
	// 메인 함수의 결과값
	return 0;
	}
