// 입출력을 위해 필요한 헤더파일은 무엇인가?
#include <stdio.h>
// 메인 함수는 어떻게 작성하는가?
int main(void){
	

	// 몸무게, 키를 저장할 변수 선언
	double w, l;
	// 입력 안내 문자열 출력 (수정하지 마세요)
	printf("몸무게(kg)와 키(cm)를 입력하세요: ");
	// 몸무게와 키를 입력받는다.
	scanf("%lf%lf", &w,&l);
	// 키를 cm 단위에서 m 단위로 환산해서 저장한다.
	l /= 100;
	// bmi를 계산한다.
	double  bmi;
	bmi = w/(l*l);
	// 만일 bmi가 20이상이고 25이하이면 다음 문자열을 출력한다.
	if (bmi>=20 && bmi <=25) {
		printf("표준입니다.\n");
	}// 만일 bmi가 20미만이거나 25초과이라면 다음 문자열을 출력한다.
	else{
		printf("체중 관리가 필요합니다.\n");
	}
		// 메인 함수 반환값
	return 0;
	}
