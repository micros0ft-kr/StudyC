#include <stdio.h>

int main(void) {
	// 마일을 저장하기 위한 변수를 생성한다.
  double mile;
	// 변환한 결과를 저장하기 위한 변수를 성생한다.
	double km;
	// 사용자로부터 "마일을 입력하세요: "라는 안내문구를 출력한다.
	printf("마일을 입력하세요: ");
	// 사용자로부터 마일을 입력받는다.
	scanf("%lf", &mile);
	// 마일을 킬로미터로 변환하여 저장한다.
	km = 1.60934 * mile;
	// 변환한 결과를 화면에 출력한다.
	printf("입력하신 %lf mile은 %lf km 입니다.", mile, km);
	// 변환 결과는 소수점 6째 자리까지 출력해야 한다.

	return 0;
}
