// 입출력을 위해 필요한 헤더파일은 무엇인가?
#include <stdio.h>
// 메인 함수는 어떻게 작성하는가?
int main(void) {
	

	// 시, 분, 초를 저장하기 위한 변수 선언
	int h, m, s, ms;
	// 입력 안내 문자열 출력 (수정하지 마세요)
	printf("초를 입력하세요: ");
	// 사용자로부터 초를 입력받음
	scanf("%d", &s);

	// 나눗셈을 이용하여 시간 계산
	h = s / 3600;
	// 나머지를 이용하여 분+초 계산
	ms = s % 3600;
	// 분+초에서 나눗셈을 이용하여 분 계산
	m = ms / 60;
	// 분+초에서 나머지를 이용하여 초 계산
	s = ms % 60;
	// 연산결과 출력 (예를 들어 h, m, s가 각각 시, 분, 초를 의미한다면)
	printf("%d시간 %d분 %d초\n", h, m, s);
	// 메인 함수의 결과값
	return 0;
	}
